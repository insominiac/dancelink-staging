# Database Configuration
DATABASE_URL="postgresql://username:password@host:port/database"

# Stripe Configuration
# Get these from your Stripe Dashboard (https://dashboard.stripe.com)
# Use test keys for development (pk_test_... and sk_test_...)
# Use live keys for production (pk_live_... and sk_live_...)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Wise Configuration
# Get these from your Wise Business Account (https://wise.com/business/)
# Use sandbox for development (https://api.sandbox.transferwise.tech)
# Use live for production (https://api.transferwise.tech)
WISE_API_KEY=your_wise_api_key_here
WISE_ACCOUNT_ID=your_wise_account_id_here
WISE_PROFILE_ID=your_wise_profile_id_here
WISE_BASE_URL=https://api.sandbox.transferwise.tech
WISE_WEBHOOK_SECRET=your_wise_webhook_secret_here

# PayPal Configuration
# Get these from PayPal Developer Dashboard (https://developer.paypal.com/dashboard/)
# Use sandbox credentials for development
# Use live credentials for production
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_MODE=sandbox

# Future Environment Variables (from ROADMAP.md)
REDIS_URL=redis://localhost:6379
JWT_SECRET=your_jwt_secret_here
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# External API base used by the frontend to call the standalone API directly
NEXT_PUBLIC_API_BASE_URL=https://dance-api-omega.vercel.app
USE_STANDALONE_API=false

# Vercel Blob (file uploads)
# Get a Read-Write token from https://vercel.com/docs/storage/vercel-blob/quickstart#creating-an-access-token
# Required for /api/admin/upload/hero-bg
BLOB_READ_WRITE_TOKEN=your_vercel_blob_rw_token_here
